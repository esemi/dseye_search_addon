{
	"manifest_version": 2,
	"name": "DSeye",
	"description": "Аддон для поиска выделенного текста на dseye.ru для игроков destinysphere.ru.",
	"version": "0.2",
	"homepage_url": "http://dseye.ru/services/addon.html",
	"offline_enabled": false,

	"permissions": [
		"contextMenus",
		"tabs",
		"http://dseye.ru/*"
	],

	"browser_action": {
		"default_icon": {
			"19": "i/19.png",
			"38": "i/38.png"
		}
	},

	"options_page": "/content/options.html",

	"background": {
		"scripts": [
			"/lib/config.js",
			"/lib/settings.js",
			"/lib/history.js",
			"/lib/stat.js",
			"/lib/contextMenu.js",
			"/lib/toolbar.js",
			"/lib/main.js"]
	},

	"icons": {
		"16": "i/16.png",
		"48": "i/48.png",
		"128": "i/128.png"
	}
}
